storeconfigs              = true
<% if dbadapter == 'puppetdb' %>
server                    = <%= dbserver %>
storeconfigs_backend      = <%= dbadapter %>
<% elsif dbadapter == 'mysql' %>
dbadapter                 = <%= dbadapter %>
dbuser                    = <%= dbuser %>
dbpassword                = <%= dbpassword %>
dbserver                  = <%= dbserver %>
dbsocket                  = <%= dbsocket %>
dbmigrate                 = true
<% elsif dbadapter == 'sqlite3' %>
dbadapter                 = sqlite3
<% end %>